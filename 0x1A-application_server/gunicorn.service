[Unit]
Description=Gunicorn Application Server that runs Airbnb_v4
Requires=gunicorn.socket
After=network.target

[Service]
User=ubuntu
Group=www-data

RuntimeDirectory=gunicorn
WorkingDirectory=/home/ubuntu/AirBnB_clone_v4
ExecStart=/home/ubuntu/.local/bin/gunicorn --workers 3 --bind 0.0.0.0:5003 web_dynamic.2hbnb:app >> /tmp/airbnb-access.log 2> /temp/airbnb-error.logaorbnb-access.log
ExecReload=/home/ubuntu/4-reload_gunicorn_no_downtime

[Install]
WantedBy=multi-user.target
